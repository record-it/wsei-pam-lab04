<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageButton
            android:tag="0 0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:layout_weight="1"
            android:src="@drawable/deck"
            android:onClick="clickButton"
            />
        <ImageButton
            android:tag="0 1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:layout_weight="1"
            android:src="@drawable/deck"
            android:onClick="clickButton"
            />
        <ImageButton
            android:tag="0 2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:layout_weight="1"
            android:src="@drawable/deck"
            android:onClick="clickButton"
            />
        <ImageButton
            android:tag="0 3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/deck"
            android:onClick="clickButton"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageButton
            android:tag="1 0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="1 1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="1 2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:layout_marginEnd="@dimen/inner_margin"
            android:src="@drawable/deck"
            android:layout_weight="1" />
        <ImageButton
            android:tag="1 3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:tag="2 0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="2 1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="2 2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:layout_marginEnd="@dimen/inner_margin"
            android:src="@drawable/deck"
            android:layout_weight="1" />
        <ImageButton
            android:tag="2 3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:tag="3 0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="3 1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/inner_margin"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

        <ImageButton
            android:tag="3 2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_marginEnd="@dimen/inner_margin"
            android:layout_weight="1" />
        <ImageButton
            android:tag="3 3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:src="@drawable/deck"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>